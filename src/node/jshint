<%>src/fileheader</%>

###
# jshint
###

ifndef HINT_DIR
	HINT_DIR := lib/
endif

# Targets

jshint:
	@node node_modules/.bin/jshint $(HINT_DIR)
	$(PRINT) "Hinting Finished"

jshint-version:
	@node node_modules/.bin/jshint --version

jshint-help:
	@echo ""
	@echo "<%>src/assets/help-headline</%>"
	@echo ""
	@echo "Usage:"
	@echo ""
	@echo "  jshint                      Hint some files"
	@echo "  jshint-version              Print the jshint version"
	@echo "  jshint-help                 Show this help"
	@echo ""
	@echo "<%>src/assets/report-bugs</%>"
	@echo ""

.PHONY: jshint jshint-version jshint-help
